<h1> New Task </h1>

<%= form_for @task do |f| %>
  <%= f.label :title, value: "title" %>
  <%= f.text_field :title %>
  <br>
  <%= f.label :details, value: "details" %>
  <%= f.text_field :details %>
  <br>
  <%= f.submit :class => "btn btn-success"%>
  <br>
<% end %>
<hr>

<p> <%=link_to "Return to tasks", tasks_path%> </p>
